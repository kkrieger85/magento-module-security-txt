<?xml version="1.0"?>
<config>
    <sections>
        <security translate="label" module="securitytxt">
            <tab>advanced</tab>
            <label>Security</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <txt>
                    <label>Security.txt</label>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <contact translate="label">
                            <label>Contact</label>
                            <sort_order>10</sort_order>
                            <frontend_type>text</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[A link or e-mail address for people to contact you about security issues. Remember to include "https://" for URLs, and "mailto:" for e-mails. See <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.3">the full description of Contact</a>]]>
                            </comment>
                        </contact>
                        <encryption>
                            <label>Encryption</label>
                            <sort_order>20</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[A link to a key which security researchers should use to securely talk to you. Remember to include "https://". See the <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.4">full description of Encryption</a>]]>
                            </comment>
                        </encryption>
                        <acknowledgments>
                            <label>Acknowledgement</label>
                            <sort_order>30</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[A link to a web page where you say thank you to security researchers who have helped you. Remember to include "https://". See the <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.1">ull description of Acknowledgments</a>]]>
                            </comment>
                        </acknowledgments>
                        <preferredLanguage>
                            <label>Preferred Language</label>
                            <sort_order>40</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[A comma-separated list of language codes that your security team speaks. You may include more than one language. See the <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.7" >full description of Preferred-Languages </a>]]>
                            </comment>
                        </preferredLanguage>
                        <canonical>
                            <label>Canonical</label>
                            <sort_order>50</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[The most common URL for accessing your security.txt file. It is important to include this if you are digitally signing the security.txt file, so that researchers can know for sure that you didn't just steal someone else's file with the same content. See the <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.2">full description of Canonical</a>]]>
                            </comment>
                        </canonical>
                        <policy>
                            <label>Policy</label>
                            <sort_order>60</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[A link to a policy detailing what security researchers should do when searching for or reporting security issues. Remember to include "https://". See the <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.6">full description of Policy </a>]]>
                            </comment>
                        </policy>
                        <hiring>
                            <label>Hiring</label>
                            <sort_order>70</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <![CDATA[A link to any security-related job openings in your organisation. Remember to include "https://". See the <a href="https://tools.ietf.org/html/draft-foudil-securitytxt#section-3.5.5">full description of Hiring</a>]]>
                            </comment>
                        </hiring>
                        <generate_security_txt translate="button_label">
                            <label></label>
                            <button_label>Generate Security.txt</button_label>
                            <frontend_model>securitytxt/system_config_createfile</frontend_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </generate_security_txt>
                    </fields>
                </txt>
            </groups>
        </security>
    </sections>
</config>